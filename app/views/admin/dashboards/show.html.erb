<% provide(:title, 'Admin Dashboard') %>
<div class='row-fluid'>
  <div class='span12'>
    <h4>Total Orders by Status</h4>
  </div>
</div>
<div class='row-fluid'>
  <div class='status-panel pull-left span12'>
    <div class='stat span2'>
      <h1 class='text-center' id='pending'>
        <%= Order.find_all_by_status("pending").count %>
      </h1>
      <p class='text-center'>
        Pending
      </p>
    </div>
    <div class='stat span2 pull-left'>
      <h1 class='text-center' id='shipped'>
        <%= Order.find_all_by_status("shipped").count %>
      </h1>
      <p class='text-center'>
        Shipped
      </p>
    </div>
    <div class='stat span3 pull-left'>
      <h1 class='text-center' id='paid'>
        <%= Order.find_all_by_status("paid").count %>
      </h1>
      <p class='text-center'>
        Paid
      </p>
    </div>
    <div class='stat span2 pull-left'>
      <h1 class='text-center' id='cancelled'>
        <%= Order.find_all_by_status("cancelled").count %>
      </h1>
      <p class='text-center'>
        Cancelled
      </p>
    </div>
    <div class='stat span2 pull-left'>
      <h1 class='text-center' id='returned'>
        <%= Order.find_all_by_status("returned").count %>
      </h1>
      <p class='text-center'>
        Returned
      </p>
    </div>
  </div>
</div>
<br>
<div class='row-fluid'>
  <div class='span12'>
    <table class='table table-striped table-bordered cart-detail'>
      <thead>
        <tr>
          <th class='span2'>Order Number</th>
          <th class='span3'>Date Ordered</th>
          <th class='span2'>Order Total</th>
          <th class='span2'>Status</th>
          <th class='span3'>Change Status To:</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to order.id, order_path(order) %>
          </td>
          <td><%= (order.created_at).to_date.strftime("%B %-d, %Y") %></td>
          <td><%= number_to_currency(order.total_price) %></td>
          <td><%= order.status %></td>
          <td>
            <a href='#'>Shipped - hard code</a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<%= simple_form_for [:admin, @category]  do |f| =%>
  <%= f.error_notification %>
  <%= f.input :name, input_html: {class: "span6"} %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" %>
  </div>
  <%= f.error :base %>
<% end %>


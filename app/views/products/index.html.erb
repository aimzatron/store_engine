      <ul class="breadcrumb">
        <li>
          <span class="divider"><!----></span>
        </li>
        <li class="active">
          All Products
        </li>
      </ul>
      
      <div class="row-fluid">
        <div class="span12">
          <div class="page-header">
            <h1>
            </h1>
          </div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="thumbnails product_list">

          <% @products.each do |product| %>
            <% if product.active %>
            <li class="span3">
              <div class="thumbnail">
                <%= link_to product_path(product) do %>
                <%= image_tag product.photo.url %>
                <% end %>
                <div class="caption">
                  <h5><%= link_to product.title, product_path(product) %></h5>
                  <p><%= number_to_currency(product.price_in_dollars) %></p>
                </div>
              </div>
            </li>
            <% end %>
          <% end %>
          
        </div>

  <%= paginate @products %>


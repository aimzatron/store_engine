      <div class='row-fluid'>
        <ul class='breadcrumb'>
          <li>
            <%= link_to "Home", "/" %>
          <span class='divider'>/</span>
          </li>
          <li class='active'>
            My Account
          </li>
        </ul>
      </div>

      <div class='row-fluid'>
        <div class='tabbable'>
          <ul class='nav nav-tabs'>
            <li>
              <%= link_to "Profile", user_path(current_user) %>
            </li>
            <li class='active'>
              <%= link_to "Past Orders", orders_path %>
            </li>
          </ul>
        </div>
      </div>
      <div class='row-fluid'>
        <div class='span12'>
          <table class='table table-striped table-bordered cart-detail'>
            <thead>
              <tr>
                <th class='span4'>Order Number</th>
                <th class='span3'>Date Ordered</th>
                <th class='span2'>Order Total</th>
                <th class='span3'>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= link_to order.id, order_path(order) %>
                </td>
                <td>
                  <%= (order.created_at).to_date.strftime("%B %-d, %Y") %>
                </td>
                <td>
                  <%= number_to_currency(order.total_price) %>
                </td>
                <td>
                  <%= order.current_status %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>




